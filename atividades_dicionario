'''
#exercicio 4 ----------------------------------------------------------
print ('exercicio 4 ----------------------------------------------------------')

capitais = {
    "São Paulo": "São Paulo",
    "Rio de Janeiro": "Rio de Janeiro",
    "Paraná": "Curitiba"
}

estado = input("Digite o nome de um estado: ")

if estado in capitais:
    capital = capitais[estado]
    print(f"A capital do estado {estado} é {capital}.")
else:
    print("Estado não encontrado no dicionário.")


'''
'''
#exercicio 5 ----------------------------------------------------------
print ('exercicio 5 ----------------------------------------------------------')

cidades = {
    "São Paulo": 12000000,
    "Rio de Janeiro": 6500000,
    "Belo Horizonte": 2500000,
    "Salvador": 2900000,
    "Brasília": 3100000
}


maiorpopulacao = max(cidades, key=cidades.get)
populacao = cidades[maiorpopulacao]

print(f"A cidade com a maior população é {maiorpopulacao}, com {populacao} habitantes.")


'''
'''
#exercicio 6 ----------------------------------------------------------
print ('exercicio 6 ----------------------------------------------------------')

alimentos = {
    "laranja": "37 kcal",
    "ovo frito": "240 kcal",
    "batata doce": "77 kcal"
}

alimento = input("Digite o nome de um alimento: ")

if alimento in alimentos:
    caloria = alimentos[alimento]
    print(f"O valor calorico do alimento {alimento} é {caloria}.")
else:
    print("alimento não encontrado no dicionário.")

