'''
#exercicio 6 ----------------------------------------------------------
print ('exercicio 6 ----------------------------------------------------------')

cores = ("vermelho", "laranja", "amarelo", "verde", "azul", "anil", "violeta")

cor = input("Digite uma cor: ")

if cor in cores:
    print(f"A cor {cor} está no arco-íris!")
else:
    print(f"A cor {cor} não faz parte do arco-íris.")

