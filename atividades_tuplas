'''
#exercicio 9 ----------------------------------------------------------
print ('exercicio 9 ----------------------------------------------------------')

num = tuple(range(1,11))

num2 = tuple(range(5, 16))

conjunto1 = set(num)
conjunto2 = set(num2)

intersecao = conjunto1 & conjunto2
print("Interseção entre as duas tuplas:", intersecao)

