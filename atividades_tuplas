'''
#exercicio 4 ----------------------------------------------------------
print ('exercicio 4 ----------------------------------------------------------')

nomes = ("Rafael", "Diego", "Enzo", "Bruno", "Itamar")

numero = int(input("Digite um número entre 1 e 5: "))

if 1 <= numero <= 5:
    nome = nomes[numero - 1]
    print(f"O nome que corresponde ao número {numero} é {nome}.")
else:
    print("Número fora do intervalo válido.")

'''
'''
#exercicio 5 ----------------------------------------------------------
print ('exercicio 5 ----------------------------------------------------------')

notas_aluno = (4.3, 9.4, 7.7, 5.5, 8.3)

media = sum(notas_aluno) / len(notas_aluno)

print(f"A média das notas do aluno é {media:.1f}")

